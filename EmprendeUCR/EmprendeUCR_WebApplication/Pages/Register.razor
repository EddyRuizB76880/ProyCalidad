<h3>Registro</h3>
@page "/Register"
@using EmprendeUCR_WebApplication.Data.Services
@using EmprendeUCR_WebApplication.Data.Entities
@using System.Net.Mail
@inject UserService UserService

<form>
    <EditForm Model="@newUsuario">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Correo electrónico</label>
        <InputText type="email" class="form-control" aria-describedby="emailHelp" id="exampleInputEmail1" @bind-Value="newUsuario.Email" />
        <div id="emailHelp" class="form-text">Nunca compartiremos su información personal</div>
    </div>

    <div class="mb-3">
        <label for="inputPassword5" class="form-label">Contraseña</label>
        <InputText type="@pwdType" class="form-control" aria-describedby="passwordHelpBlock" id="inputPassword5" @bind-Value="newUsuario.Name" />
        <button type="button" class="btn btn-info" @onclick="@showPassword" style="border: double">@text</button>
        <div id="passwordHelpBlock" class="form-text">
            Su contraseña debe contener entre 8-20 caracteres, letras y números, no puede tener caracteres especiales.
        </div>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" @onchange="@(() =>userType(1))" checked>
        <label class="form-check-label" for="flexRadioDefault1">
            Cliente
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" @onchange="@(() =>userType(2))">
        <label class="form-check-label" for="flexRadioDefault2">
            Emprendedor
        </label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3" @onchange="@(() =>userType(3))">
        <label class="form-check-label" for="flexRadioDefault3">
            Administrador
        </label>
    </div>
    <!--<button type="submit" class="btn btn-primary">Registrarse</button>-->
    </EditForm>
</form>
<button class="btn btn-primary" @onclick="SendMail"> Enviar correo</button>
<br />
<span style="font-weight:bold; font-size=28px; color: aquamarine">@Message</span>





@code {
    private User newUsuario = new User();
    private string Message { get; set; } = "";
    private int user = 0;

    private string pwdType = "password";
    private string text = "Mostrar Contraseña";

    public void userType(int userInput)
    {
        user = userInput;
    }


    private void SendMail()
    {
        try
        {
            using (MailMessage mail = new MailMessage())
            {
                mail.From = new MailAddress("emprende.ucr@gmail.com");
                mail.To.Add(newUsuario.Email);
                if (user == 1){
                    mail.Subject = "New client";
                    mail.Body = "Welcome new client";
                }else if(user == 2) {
                    mail.Subject = "New Entreprenaur";
                    mail.Body = "Welcome new entreprenaur";

                }
                else if (user == 3){
                    mail.Subject = "New admin";
                    mail.Body = "Welcome new admin";

                }
                mail.IsBodyHtml = true;
                using (SmtpClient smtp = new SmtpClient("smtp.gmail.com", 587))
                {

                    smtp.Credentials = new System.Net.NetworkCredential("emprende.ucr@gmail.com", "ingebases21");
                    smtp.EnableSsl = true;
                    smtp.Send(mail);
                    Message = "Correo enviado";
                }
            }

        }
        catch (Exception ex)
        {
            Message = ex.Message;
        }
    }

    public void showPassword()
    {
        if (pwdType == "password")
        {
            pwdType = "text";
            text = "Esconder Contraseña";
        }
        else
        {
            pwdType = "password";
            text = "Mostrar Contraseña";
        }
    }
}





























